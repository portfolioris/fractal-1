{
  "name": "fractal-1",
  "description": "fractal 1 project files",
  "version": "1.0.0",
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "_dev": "gulp serve",
    "_build": "gulp build",
    "dev": "run-p  wp:serve  patterns:watch",
    "wp:serve": "webpack serve  --open  --mode development",
    "patterns": "watch",
    "pl:build": "patternlab build --config ./patternlab-config.json",
    "pl:help": "patternlab --help",
    "pl:install": "patternlab install --config ./patternlab-config.json",
    "pl:serve": "patternlab serve --config ./patternlab-config.json",
    "pl:version": "patternlab --version"
  },
  "dependencies": {
    "@supple-kit/supple-css": "^5.0.0-beta.2",
    "conditioner-core": "^2.3.3",
    "element-closest": "^3.0.2",
    "faker": "^5.4.0",
    "focus-visible": "^5.2.0",
    "intersection-observer": "^0.12.0",
    "scroll-into-view": "^1.15.0",
    "svgxuse": "^1.2.6",
    "wicg-inert": "^3.1.1",
    "@pattern-lab/cli": "^5.14.1",
    "@pattern-lab/core": "^5.14.1",
    "@pattern-lab/engine-handlebars": "^5.14.0",
    "@pattern-lab/uikit-workshop": "^5.14.1"
  },
  "devDependencies": {
    "@frctl/fractal": "^1.5.4",
    "@frctl/handlebars": "^1.2.5",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "lorem-ipsum": "^2.0.3",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss-dir-pseudo-class": "^5.0.0",
    "postcss-logical": "^4.0.2",
    "postcss-pxtorem": "^6.0.0",
    "prettier": "^2.2.1",
    "stylelint-use-logical": "^1.1.0",
    "webpack-config-starterkit": "git+http://github.com/portfolioris/webpack-config-starterkit.git"
  },
  "config": {
    "paths": {
      "source": {
        "root": "src/",
        "docs": "src/docs/",
        "patterns": "src/patterns/",
        "js": "src/js/",
        "svg": "src/svg/",
        "sass": "src/sass/",
        "assets": "src/assets/"
      },
      "public": {
        "root": "public/",
        "js": "public/js/",
        "jsPublicPath": "/js/",
        "svg": "public/svg/",
        "assets": "public/assets/",
        "css": "public/css/"
      },
      "build": {
        "root": "dist/"
      }
    }
  }
}
