{{ render '@atoms-button' triggerBtn }}

<details-modal id="confirm" class="c-modal__details" role="document">
  <div class="c-modal__overlay" data-modal-close></div>
  <div class="c-modal__modal">

    <header class="c-modal__header">
      {{#> '@atoms-layout' gap='base' }}
        {{#> '@atoms-cell' fill=true }}
          <h3 data-modal-heading>{{ heading }}</h3>
        {{/'@atoms-cell'}}
        {{#> '@atoms-cell' fit=true }}
          <button data-modal-close type="button"
                  class="o-button-clean">
            {{ render '@atoms-icon--cross' }}
            <span class="u-visually-hidden">Close</span>
          </button>
        {{/'@atoms-cell'}}
      {{/'@atoms-layout'}}
    </header>

    <main class="c-modal__overflow">
      <div class="c-modal__content  o-flow">

        <div data-details-modal-content>{{{ rte }}}</div>

        <form method="post" action="">
          <p>{{ render '@atoms-button' submitBtn }}</p>
        </form>

        <p>{{ render '@atoms-button' cancelBtn }}</p>

      </div>
    </main>
  </div>
</details-modal>

